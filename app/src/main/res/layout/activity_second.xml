<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.android.photocapturingdemo.SecondActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Activity"
 />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/sa_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/colorAccent"
            android:columnCount="2"
            android:horizontalSpacing="2dp"
            android:orientation="vertical"
            android:rowCount="3"
            android:verticalSpacing="2dp">

            <ImageView
                android:id="@+id/a_ImageView1"
                android:layout_height="150dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="0"
                android:background="@drawable/image1" />

            <ImageView
                android:id="@+id/a_ImageView2"
                android:layout_height="150dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="0"
                android:background="@drawable/image2"
                />

            <ImageView
                android:id="@+id/a_ImageView3"
                android:layout_height="150dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@drawable/image3"/>

            <ImageView
                android:id="@+id/a_ImageView4"
                android:layout_height="150dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="1"
                android:background="@drawable/image4"/>

            <ImageView
                android:id="@+id/a_ImageView5"
                android:layout_height="150dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@drawable/image5"/>

            <ImageView
                android:id="@+id/a_ImageView6"
                android:layout_height="150dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="2"
                android:background="@drawable/image6"/>

        </GridLayout>
    </FrameLayout>


</LinearLayout>
